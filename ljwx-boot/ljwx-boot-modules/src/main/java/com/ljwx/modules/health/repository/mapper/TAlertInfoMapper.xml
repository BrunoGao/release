<mapper namespace="com.ljwx.modules.health.repository.mapper.TAlertInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="TAlertInfoResultMap" type="com.ljwx.modules.health.domain.entity.TAlertInfo">
        <result column="rule_id" property="ruleId"/>
        <result column="alert_type" property="alertType"/>
        <result column="device_sn" property="deviceSn"/>
        <result column="alert_timestamp" property="alertTimestamp"/>
        <result column="alert_desc" property="alertDesc"/>
        <result column="severity_level" property="severityLevel"/>
        <result column="alert_status" property="alertStatus"/>
        <result column="assigned_user" property="assignedUser"/>
        <result column="assigned_user_id" property="assignedUserId"/>
        <result column="id" property="id"/>
        <result column="health_id" property="healthId"/>
        <result column="user_id" property="userId"/>
        <result column="org_id" property="orgId"/>
        <result column="customer_id" property="customerId"/>
        <result column="user_name" property="userName"/>
        <result column="level" property="level"/>
        <result column="occur_at" property="occurAt"/>
        <result column="is_deleted" property="deleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="TAlertInfoColumnList">
        id,
        is_deleted,
        create_user,
        create_user_id,
        create_time,
        update_user,
        update_user_id,
        update_time,
        rule_id,
        alert_type,
        device_sn,
        alert_timestamp,
        alert_desc,
        severity_level,
        alert_status, assigned_user, assigned_user_id, health_id, user_id, org_id, customer_id, level, occur_at
    </sql>

    <!-- 查询告警信息并关联用户名 - 优化版本，利用sys_user的org_id和org_name字段 -->
    <select id="listAlertInfoWithUserName" resultMap="TAlertInfoResultMap">
        SELECT
            a.id,
            a.rule_id,
            a.alert_type,
            a.device_sn,
            a.alert_timestamp,
            a.alert_desc,
            a.severity_level,
            a.alert_status,
            a.assigned_user,
            a.assigned_user_id,
            a.health_id,
            a.user_id,
            a.org_id,
            a.customer_id,
            a.level,
            a.occur_at,
            a.is_deleted,
            a.create_user,
            a.create_user_id,
            a.create_time,
            a.update_user,
            a.update_user_id,
            a.update_time,
            u.user_name,
            u.org_name as user_org_name,
            u.real_name as user_real_name
        FROM
            t_alert_info a
        LEFT JOIN sys_user u ON a.user_id = u.id
        WHERE a.is_deleted = 0
        <if test="bo.customerId != null and bo.customerId != 0">
            AND (a.customer_id = 0 OR a.customer_id = #{bo.customerId})
        </if>
        <if test="bo.userId != null">
            AND a.user_id = #{bo.userId}
        </if>
        <if test="bo.orgId != null and bo.orgId != 0">
            AND a.org_id = #{bo.orgId}
        </if>
        <if test="bo.alertType != null and bo.alertType != ''">
            AND a.alert_type = #{bo.alertType}
        </if>
        <if test="bo.alertStatus != null and bo.alertStatus != ''">
            AND a.alert_status = #{bo.alertStatus}
        </if>
        ORDER BY a.alert_timestamp DESC
    </select>

    <!-- 高性能组织级告警查询 - 利用sys_user优化 -->
    <select id="listAlertInfoByOrgOptimized" resultMap="TAlertInfoResultMap">
        SELECT
            a.*,
            u.user_name,
            u.org_name as user_org_name,
            u.real_name as user_real_name
        FROM
            t_alert_info a
        INNER JOIN sys_user u ON a.user_id = u.id
        WHERE a.is_deleted = 0
            AND u.org_id = #{orgId}
        <if test="customerId != null and customerId != 0">
            AND a.customer_id = #{customerId}
        </if>
        <if test="alertType != null and alertType != ''">
            AND a.alert_type = #{alertType}
        </if>
        <if test="alertStatus != null and alertStatus != ''">
            AND a.alert_status = #{alertStatus}
        </if>
        ORDER BY a.alert_timestamp DESC
    </select>

    <!-- 用户告警统计查询 - 利用sys_user优化避免多表JOIN -->
    <select id="getAlertStatsByUser" resultType="java.util.Map">
        SELECT
            a.user_id,
            u.user_name,
            u.org_name,
            u.org_id,
            COUNT(*) as alert_count,
            COUNT(CASE WHEN a.severity_level = 'HIGH' THEN 1 END) as high_severity_count,
            COUNT(CASE WHEN a.alert_status = 'UNRESOLVED' THEN 1 END) as unresolved_count
        FROM
            t_alert_info a
        INNER JOIN sys_user u ON a.user_id = u.id
        WHERE a.is_deleted = 0
        <if test="orgId != null">
            AND u.org_id = #{orgId}
        </if>
        <if test="customerId != null">
            AND a.customer_id = #{customerId}
        </if>
        <if test="startTime != null">
            AND a.alert_timestamp &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            AND a.alert_timestamp &lt;= #{endTime}
        </if>
        GROUP BY a.user_id, u.user_name, u.org_name, u.org_id
        ORDER BY alert_count DESC
    </select>

</mapper>
