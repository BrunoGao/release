# 使用国内可访问的Python基础镜像（支持多架构）
FROM python:3.9-slim

# 设置工作目录
WORKDIR /app

# 配置系统包管理器使用多个源
RUN echo "deb http://mirrors.aliyun.com/debian/ bullseye main non-free contrib" > /etc/apt/sources.list && \
    echo "deb-src http://mirrors.aliyun.com/debian/ bullseye main non-free contrib" >> /etc/apt/sources.list && \
    echo "deb http://mirrors.tuna.tsinghua.edu.cn/debian/ bullseye main non-free contrib" >> /etc/apt/sources.list && \
    echo "deb http://mirrors.163.com/debian/ bullseye main non-free contrib" >> /etc/apt/sources.list

# 配置pip使用多个镜像源备选
RUN pip config set global.timeout 600 && \
    pip config set global.retries 5 && \
    pip config set install.trusted-host "mirrors.aliyun.com pypi.tuna.tsinghua.edu.cn mirrors.163.com" && \
    pip config set global.extra-index-url "https://pypi.tuna.tsinghua.edu.cn/simple/ https://mirrors.163.com/pypi/simple/" && \
    pip config set global.index-url https://mirrors.aliyun.com/pypi/simple/

# 安装系统依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    default-libmysqlclient-dev \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# 复制依赖文件
COPY requirements-docker.txt .

# 分步安装Python依赖，增加容错性
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir --timeout=600 --retries=5 redis flask flask_sqlalchemy && \
    pip install --no-cache-dir --timeout=600 --retries=5 mysql-connector-python pymysql && \
    pip install --no-cache-dir --timeout=600 --retries=5 flask_socketio flask_cors requests && \
    pip install --no-cache-dir --timeout=600 --retries=5 -r requirements-docker.txt || \
    (echo "阿里云源失败，尝试清华源..." && \
     pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple/ && \
     pip install --no-cache-dir --timeout=600 --retries=5 -r requirements-docker.txt) || \
    (echo "清华源失败，尝试163源..." && \
     pip config set global.index-url https://mirrors.163.com/pypi/simple/ && \
     pip install --no-cache-dir --timeout=600 --retries=5 -r requirements-docker.txt)

# 复制应用代码
COPY . .

# 设置环境变量
ENV MYSQL_HOST=host.docker.internal \
    MYSQL_PORT=3306 \
    REDIS_HOST=host.docker.internal \
    REDIS_PORT=6379 \
    PYTHONPATH=/app \
    PYTHONUNBUFFERED=1

# 暴露应用端口
EXPOSE 5001

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python3 -c "import requests; requests.get('http://localhost:5001/api/health')" || exit 1

# 启动应用
CMD ["python3", "run.py"] 